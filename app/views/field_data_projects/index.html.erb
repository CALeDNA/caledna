<h1 class="title">Field Data Projects</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Number of Samples</th>
  </tr>

  <% @projects.each do |project| %>
    <tr class="clickable_row" data-path='<%=  field_data_project_path project%>' >
      <td><%= project.name %></td>
      <td><%= project.samples.count %> </td>
    </tr>
  <% end %>
</table>

<%= paginate @projects %>
