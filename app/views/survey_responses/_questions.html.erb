<% if question.check_boxes? %>
  <%= form_q.input :survey_options, as: :check_boxes,
    collection: display_option_collection(question),
    checked: -> (i) { @checked_options.include?(i.last) },
    label: false
  %>
<% elsif question.multiple_choice? %>
  <%= form_q.input :survey_options, as: :radio_buttons,
    collection: display_option_collection(question),
    checked: -> (i) { @checked_options.include?(i.last) },
    label: false
  %>
<% end %>
