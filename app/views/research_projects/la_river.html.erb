<h1><%= @project.name %></h1>
<%= render partial: "research_projects/submenu" %>

<h2>
  <%= @page.title %>
  <% if @page.show_edit_link?(current_researcher) %>
    <%= link_to 'Edit',
      edit_research_project_page_path(research_project_id: params[:research_project_id], id: params[:id]) ,
      class: "btn btn-primary"
    %>
  <% end %>
</h2>
<%= sanitize @page.body %>

<div class="clearfix"></div>

<% if params[:id] == 'area-diversity' %>
  <%= render partial: "research_projects/la_river/area_diversity" %>

<% elsif params[:id] == 'detection-frequency' %>
  <%= render partial: "research_projects/la_river/detection_frequency" %>

<% elsif params[:id] == 'overview' %>
  <%= render partial: "research_projects/la_river/occurrence_comparison" %>

<% elsif params[:id] == 'intro' %>
  <%= render partial: "research_projects/la_river/intro_stats" %>

<% elsif params[:id] == 'sites' %>
  <%= render partial: "research_projects/la_river/sites_map" %>

<% elsif params[:id] == 'plants-animals' %>
  <%= render partial: "research_projects/la_river/identified_species" %>

<% elsif params[:id] == 'organisms-tree' %>
  <%= render partial: "research_projects/la_river/asv_tree" %>

<% elsif params[:id] == 'sampling-types' %>
  <%= render partial: "research_projects/la_river/sampling_types" %>

<% end %>




