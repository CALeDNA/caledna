<% path_params = { field_data_project_id: params[:field_data_project_id], status: params[:status],
  lat: params[:lat], lng: params[:lng], zoom: params[:zoom], sample_id: params[:sample_id] } %>

<h1>Sites: <%= @query %></h1>

<div class="samples-menu">
  <div class="btn-group" role="group" >
    <a href="<%= search_path(query: @query) %>" class="btn btn-default">
      <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> Map
    </a>
    <a href="<%= search_path(query: @query, view: :list) %>" class="btn btn-default">
      <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> List
    </a>
  </div>

  <%= render partial: "searches/form" %>

  <a href="<%= samples_path %>" class="btn btn-default reset-search">
    <span class="glyphicon glyphicon glyphicon-refresh" aria-hidden="true"></span> Reset Search
  </a>
</div>

<% if params[:view] == 'list' %>
  <%= render partial: "samples/list", locals: { samples: @samples, asvs_count: @asvs_count }  %>
<% else %>
  <%= render partial: "samples/map" %>
  <%= javascript_pack_tag 'samples_search_map' %>
<% end %>
