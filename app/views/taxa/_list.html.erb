<table class="table">
  <tr>
    <th>Sample</th>
    <th>Field Data Project</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Organisms from ASV</th>
  </tr>

  <% samples.each do |sample| %>
    <tr>
      <td><%= link_to sample.barcode, sample_path(id: sample.id) %></td>
      <td><%= link_to sample.field_data_project_name, field_data_project_path(id: sample.field_data_project_id) %></td>
      <td><%= sample.latitude %> </td>
      <td><%= sample.longitude %></td>
      <td>
        <%= sample.class == Sample ? sample.asvs_count : sample.taxons.count %>
      </td>
    </tr>
  <% end %>
</table>

<%= paginate samples %>
