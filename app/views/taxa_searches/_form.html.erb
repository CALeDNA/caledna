<%= simple_form_for :search, url: taxa_search_path, method: :get, enforce_utf8: false,
  html: { class: 'form-inline taxa-search-form' }, wrapper: :inline_form do |f| %>
  <%= f.input :query, placeholder: 'Search by Latin or common names (e.g., Canis lupus, wolf)', label: false, width: '100%',
    input_html: { class: 'icon search-icon', value: @query,  name: :query }  %>
  <%= f.button :button, name: nil do %>
    <i class="fas fa-search"></i>
  <% end %>
<% end %>
