<div>
  <h1><%= pluralize(@matches.total_records, "match") %> for <%= "#{@query}" if @query %></h1>
</div>

<div class="taxa-search-menu">
  <%= render partial: "form" %>
  <a href="<%= taxa_search_path %>" class="btn btn-default reset-search">
    <span class="glyphicon glyphicon glyphicon-refresh" aria-hidden="true"></span> Reset Search
  </a>
</div>

<div class="taxa-image-gallery">
  <% @matches.each do |match| %>
    <div class="item">
      <% if TaxaSearchHelper.image(match).present? %>
        <%= link_to(image_tag(TaxaSearchHelper.image(match), class: 'img-responsive'),
          taxon_path(id: match.taxon_id)) %>
      <% else %>
        <%= link_to(image_tag('blank_photo.svg'),
          taxon_path(id: match.taxon_id)) %>
      <% end %>
      <p>
        <%= match.rank %>: <%= link_to match.canonical_name,
          taxon_path(id: match.taxon_id) %><br>
        <%
          common_names = TaxaSearchHelper.common_names(match)
          if common_names.present?
        %>
          <%= common_names %><br>
        <% end %>
        <%= pluralize(match.asvs_count, 'site') %>
      </p>
    </div>
  <% end %>
</div>

<% if @matches.present? %>
<%= paginate @matches %>
<% end %>
