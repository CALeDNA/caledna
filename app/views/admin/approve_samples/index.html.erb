<% content_for(:title) { 'Approve Submitted Samples' } %>

<header class="main-content__header" role="banner">
  <h1 class="main-content__page-title">
    <%= content_for(:title) %>
  </h1>
</header>

<section class="main-content__body">

  <div class="samples-menu">
    <div class="btn-group" role="group" >
      <a data-action="approve_samples"  class="batch-action btn btn-default">
        Approve
      </a>
      <a data-action="reject_samples"  class="batch-action btn btn-default">
        Reject
      </a>
    </div>
    <a data-action="assign_samples" class="btn btn-default open-button" id="open-button">
      Assign
    </a>
  </div>

  <table>
    <tr>
      <th><%= check_box_tag :rows %></th>
      <th>Bar Code</th>
      <th>Project</th>
      <th>Lat/Lng</th>
      <th>Photo</th>
    </tr>
    <% @samples.each do |sample| %>
    <tr class="js-table-rows" data-url="<%= admin_sample_path(sample.id) %>%">
      <td><%= check_box_tag :row, sample.id%> </td>
      <td><%= sample.bar_code %></td>
      <td><%= sample.project.name %></td>
      <td><%= sample.latitude %> / <%= sample.longitude %></td>
      <td>
        <% sample.photos.each do |photo| %>
          <%= link_to admin_photo_path(photo) do %>
            <%#= image_tag(photo.source_url)  %>
          <% end %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>

</section>

<%= render partial: 'assign_modal' %>

<%= paginate @samples %>
