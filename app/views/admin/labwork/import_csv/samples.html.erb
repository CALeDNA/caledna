<% content_for(:title) { 'Import Samples for Research Project' } %>

<header class="main-content__header" role="banner">
  <h1 class="main-content__page-title">
    <%= content_for(:title) %>
  </h1>
</header>

<section class="main-content__body">
  <p>Upload CSV to add samples for a research project.</p>

  <%= form_tag admin_labwork_samples_csv_path, multipart: true do %>
    <%= select(:research_project, :id, @projects, {include_blank: 'Select research project'}) %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import" %>
  <% end %>
</section>
