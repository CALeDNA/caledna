<% content_for(:title) { 'Import Kobo Samples Metadata' } %>

<header class="main-content__header" role="banner">
  <h1 class="main-content__page-title">
    <%= content_for(:title) %>
  </h1>
</header>

<section class="main-content__body">
  <p>Import additional metadata for Kobo samples.</p>

  <%= form_tag admin_labwork_import_kobo_samples_metadata_path, multipart: true do %>
    <div class="field-unit">
      <div class="field-unit__label">
        <label>Kobo Samples Metadata CSV</label>
      </div>
      <div class="field-unit__field">
        <%= file_field_tag :file %>
      </div>
    </div>

    <%#= select(:dna_results, :extraction_type_id, @extraction_types, {include_blank: 'Select extraction type'}) %>
    <%= hidden_field(:dna_results, :extraction_type_id, value: ExtractionType.first.id) %>
    <%= submit_tag "Import" %>
  <% end %>
</section>
