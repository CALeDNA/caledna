<% content_for(:title) { 'Import Field Samples (Kobo Style)' } %>

<header class="main-content__header" role="banner">
  <h1 class="main-content__page-title">
    <%= content_for(:title) %>
  </h1>
</header>

<section class="main-content__body">
  <p>Import field samples (Kobo-style).</p>

  <%= form_tag admin_labwork_import_kobo_field_data_path, multipart: true do %>
    <div class="field-unit">
      <div class="field-unit__label">
        <label>Field Project</label>
      </div>
      <div class="field-unit__field">
        <%= select(:samples, :field_project_id, @field_projects, {include_blank: 'Select field project'}) %>
      </div>
    </div>
    <div class="field-unit">
      <div class="field-unit__label">
        <label>Field Samples CSV (Kobo style)</label>
      </div>
      <div class="field-unit__field">
        <%= file_field_tag :file %>
      </div>
    </div>

    <%= submit_tag "Import" %>
  <% end %>
</section>
