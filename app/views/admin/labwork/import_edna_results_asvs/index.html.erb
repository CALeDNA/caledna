<% content_for(:title) { 'Import taxonomy tables with read counts from eDNA results' } %>

<header class="main-content__header" role="banner">
  <h1 class="main-content__page-title">
    <%= content_for(:title) %>
  </h1>
</header>

<section class="main-content__body">
  <p>Upload CSV to import taxonomy tables with read counts from eDNA results.</p>

  <%= form_tag admin_labwork_import_edna_results_asvs_path, multipart: true do %>
    <div class="field-unit">
      <div class="field-unit__label">
        <label>Research Project</label>
      </div>
      <div class="field-unit__field">
        <%= select(:dna_results, :research_project_id, @projects, {include_blank: 'Select research project'}) %>
      </div>
    </div>

    <div class="field-unit">
      <div class="field-unit__label">
        <label>Primer</label>
      </div>
      <div class="field-unit__field">
        <%= select(:dna_results, :primer, Primer.all.map(&:name), {include_blank: 'Select primer'}) %>
      </div>
    </div>
    <div class="field-unit">
      <div class="field-unit__label">
        <label>eDNA results CSV</label>
      </div>
      <div class="field-unit__field">
        <%= file_field_tag :file %>
      </div>
    </div>

    <%= submit_tag "Import" %>
  <% end %>
</section>
