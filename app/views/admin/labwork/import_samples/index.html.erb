<% content_for(:title) { 'Import samples' } %>

<header class="main-content__header" role="banner">
  <h1 class="main-content__page-title">
    <%= content_for(:title) %>
  </h1>
</header>

<section class="main-content__body">
  <p>Upload CSV to add samples to a field project.</p>

  <%= form_tag admin_labwork_import_samples_path, multipart: true do %>
    <div class="field-unit">
      <div class="field-unit__label">
        <label>Field Project</label>
      </div>
      <div class="field-unit__field">
        <%= select(:samples, :field_project_id, @projects, {include_blank: 'Select field project'}) %>
      </div>
    </div>
    <div class="field-unit">
      <div class="field-unit__label">
        <label>Samples CSV</label>
      </div>
      <div class="field-unit__field">
        <%= file_field_tag :file %>
      </div>
    </div>
    <%= submit_tag "Import" %>
  <% end %>
</section>
