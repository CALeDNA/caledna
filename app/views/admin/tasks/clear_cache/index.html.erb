<% content_for(:title) { 'Clear Cache' } %>

<header class="main-content__header" role="banner">
  <h1 class="main-content__page-title">
    <%= content_for(:title) %>
  </h1>
</header>

<section class="main-content__body">
  <p>Clear cache for given key.</p>

  <%= form_tag admin_tasks_clear_cache_path(:id), method: :put do %>
    <div class="field-unit">
      <div class="field-unit__label">
        <label>Cache Key</label>
      </div>

      <div class="field-unit__field">
       <input type="text"  name="clear_cache[id]"><br>
      </div>
    </div>
    <%= submit_tag "Submit" %>
  <% end %>
</section>
