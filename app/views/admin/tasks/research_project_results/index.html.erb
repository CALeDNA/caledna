<% content_for(:title) { 'Bulk delete eDNA results' } %>

<header class="main-content__header" role="banner">
  <h1 class="main-content__page-title">
    <%= content_for(:title) %>
  </h1>
</header>

<section class="main-content__body">
  <p> Delete all eDNA results for a research project.</p>

  <%= form_tag admin_tasks_bulk_delete_research_project_results_url, method: :delete do %>
    <div class="field-unit">
      <div class="field-unit__label">
        <label>Research Project</label>
      </div>
      <div class="field-unit__field">
        <%= select(:results, :research_project_id, @projects, {include_blank: 'Select research project'}) %>
      </div>
    </div>

    <%= submit_tag "Delete" %>
  <% end %>
</section>
