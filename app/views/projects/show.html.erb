<h1><%= @project.name %></h1>

<p><%= @project.description %></p>

<p>
  <%= pluralize(@project.samples.count, 'sample') %> collected.
  <%= link_to samples_path(project_id: @project.id) do %>
    <span class=" glyphicon glyphicon-list-alt" aria-hidden="true"></span> List
  <% end %>
  <%= link_to map_path(project_id: @project.id) do %>
    <span class=" glyphicon glyphicon-map-marker" aria-hidden="true"></span> Map
  <% end %>
</p>
<p>
  <%= pluralize(@project.samples.analyzed.count, 'sample') %> being analyzed.
  <%= link_to samples_path(project_id: @project.id, status: :analyzed) do %>
    <span class=" glyphicon glyphicon-list-alt" aria-hidden="true"></span> List
  <% end %>
  <%= link_to map_path(project_id: @project.id, status: :analyzed) do %>
    <span class=" glyphicon glyphicon-map-marker" aria-hidden="true"></span> Map
  <% end %>
</p>
<p>
  <%= pluralize(@project.samples.results_completed.count, 'sample') %> with DNA results.
  <%= link_to samples_path(project_id: @project.id, status: :results_completed) do %>
    <span class=" glyphicon glyphicon-list-alt" aria-hidden="true"></span> List
  <% end %>
    <%= link_to map_path(project_id: @project.id, status: :results_completed) do %>
    <span class=" glyphicon glyphicon-map-marker" aria-hidden="true"></span> Map
  <% end %>
</p>
