<h2>Overview</h2>
<table class="table">
  <tr>
    <td>Field Project</td>
    <td><%= link_to sample.field_project.name, field_project_path(sample.field_project) %></td>
  </tr>
  <tr>
    <td>Research Projects</td>
    <td>
      <% sample.research_projects.each do |project| %>
        <%= link_to project.name, research_project_path(id: project.slug) %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td>Barcode</td>
    <td><%= sample.barcode %></td>
  </tr>
  <tr>
    <td>Lat/Long</td>
    <td>
      <%= sample.latitude %>, <%= sample.longitude %>
    </td>
  </tr>
  <tr>
    <td>Location</td>
    <td><%= sample.location_display %></td>
  </tr>
  <tr>
    <td>Field Notes</td>
    <td>
      <%= sample.field_notes %>
    </td>
  </tr>
  <tr>
    <td>Status</td>
    <td><%= sample.status_display %></td>
  </tr>
  <tr>
    <td>Collection Date</td>
    <td><%= long_date(sample.submission_date) %></td>
  </tr>

  <% sample.extractions.each do |extraction| %>
    <tr>
      <td>DNA Results Completed Date</td>
      <td><%= long_date(extraction.stat_dna_extraction_date) %></td>
    </tr>
  <% end %>
</table>

<div class="row">
  <div class="col col-md-6">
    <% if division_counts.present? %>
      <h3><%= organisms.length %> Organisms from ASVs</h3>
      <canvas id="kingdom-chart" width="400" height="400"></canvas>
    <% end %>
  </div>
  <div class="col col-md-6">
  </div>
</div>


<div class="row">
  <div class="col col-md-6">
    <h3>Map</h3>
    <%= render partial: "shared/map" %>
  </div>
  <div class="col col-md-6">
    <h3><%= sample.kobo_photos.count %> Site Photos</h3>
    <% if sample.kobo_photos.present? %>
      <%= render partial: "samples/gallery", locals: { kobo_photos: sample.kobo_photos } %>
    <% else %>
      <%= image_tag 'blank_photo.svg' %>
    <% end %>
  </div>
</div>


