<h2><%= organisms.length %> Organisms from ASVs</h2>

<ul>
<% SamplesHelper.sorted_taxa(organisms).each do |organism| %>
  <li>
    <%= organism['rank']  %>:
    <% if SamplesHelper.threatened?(organism['iucn_status']) %>
      (Name not shown because this species is <%= organism['iucn_status'] %>)
    <% else %>
      <%= link_to organism[:taxonomy_string], taxon_path(organism['taxon_id']) %>
      <%= SamplesHelper.batch_common_names(batch_vernaculars, organism['taxon_id']) %>
    <% end %>
  </li>
<% end %>
</ul>
