<table class="table">
  <tr>
    <th>Sample</th>
    <th>Field Data Project</th>
    <th>Latitude/Longitude; GPS Precision</th>
    <th>Location</th>
    <th>Status</th>
    <th>Organisms from ASV</th>
  </tr>

  <% samples.each do |sample| %>
    <tr class="clickable_row" data-path="<%= sample_path(sample) %>">
      <td><%= link_to sample.barcode, sample_path(sample) %></td>
      <td ><%= link_to sample.field_data_project.name,  field_data_project_path(sample.field_data_project) %></td>
      <td>
        <%= sample.latitude %>, <%= sample.longitude %>; <%= sample.gps_precision %>
      </td>
      <td><%= sample.location %></td>
      <td><%= sample.status_display %></td>
      <td><%= SamplesHelper.asvs_count(asvs_count, sample) %></td>
    </tr>
  <% end %>
</table>

<%= paginate samples %>
