<h2><%= organisms.length %> Organisms from ASVs</h2>

<div class="kingdom-submenu">
  <a class="btn my-btn-default " data-kingdom="All">
    All Kingdoms
  </a>
  <% NcbiDivision::SEVEN_KINGDOMS.each do |kingdom| %>
    <a class="btn my-btn-default kingdom-submenu" data-kingdom="<%=kingdom %>">
      <%= image_tag "taxa_icons/#{kingdom.downcase}.png", class: 'kingdom-icon' ,
        'data-kingdom': kingdom %>
      <%= kingdom %>
    </a>
  <% end %>
</div>

<ul class="organism-list">
  <% organisms.each do |organism| %>
    <li class="<%= organism.division_name.tr(' ', '_') %> item">
      <% if SamplesHelper.threatened?(organism.iucn_status) %>
        (Name not shown because this species is <%= organism.iucn_status %>)
      <% else %>
        <%= organism.rank %>:
        <%= link_to SamplesHelper.taxonomy_string(organism), taxon_path(organism.taxon_id) %>
        <%= "(#{organism.common_names})" if organism.common_names %>
      <% end %>
    </li>
  <% end %>
</ul>
